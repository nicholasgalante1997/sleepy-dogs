{
    "compilerOptions": {
        "target": "es6",
        "lib": ["es6"],
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "rootDir": ".",
        "outDir": "dist",
        "resolveJsonModule": true,
        "allowJs": true,
        "skipLibCheck": true,
        "declaration": true,
        "removeComments": false,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
    },
    "include": ["src", "__tests__"],
    "exclude": ["node_modules"]
}